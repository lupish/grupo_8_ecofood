            <p>Rol: <%= rol %></p>
            <% } %>
            <div class="btns">
                <button><a class="link-boton-2" href="/users/logout/<%= user.id %>">Cerrar sesi√≥n</a></button>
                <button><a class="link-boton-1" href="/users/edit/<%= user.id %>">Editar perfil</a></button>  
