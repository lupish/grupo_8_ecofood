<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', {title: "Gestionar productos"}) %>
<body>
    <%- include('../partials/header') %>
    <main>
        <section class="section-common">
            <div class="panel-prods-div">
                <div class="panel-prods-header">
            
                    <h2>Panel de gesti√≥n de productos</h2>
                    <a href="/products/create">
                        <i class="fa-solid fa-plus"></i>
                    </a>
                </div>
                <% for(let i = 0; i < prods.length; i++) { %>
                    <article>
                        <div class="panel-prods-info">
                            <div class="img-chica">
                                <% if (prods[i].imgs.length > 0) { %>
                                    <img src="<%= prods[i].imgs[0].img %>" alt="<%= prods[i].imgs[0].alt %>" width="360">    
                                <% } else { %>
                                    <img src="/img/products/img-not-found.webp" alt="Producto sin imagen" width="360">
                                <% } %>
                            </div>
                            
                            <div>
                                <p class="panel-prods-nombre"><%= prods[i].nombre %></p>
                            </div>
                        </div>
                        <div class="panel-prods-icons">
                            <a href="/products/productDetail/<%= prods[i].id %>">
                                <i id="icon-edit" class="fa-solid fa-magnifying-glass"></i>
                            </a>
                            <a href="/products/edit/<%= prods[i].id %>">
                                <i id="icon-edit" class="fa-solid fa-pen-to-square"></i>
                            </a>
                          
                                <label for="eliminar<%=prods[i].id%>" class="softDelete"><i id="icon-edit" class="fa-solid fa-trash-can"></i></label>
                               
                            
                            <form style="display: none;" action="/products/delete/soft/<%= prods[i].id %>?_method=delete" method="POST"><input id="eliminar<%=prods[i].id%>" type="submit" value="eliminar"></form>
                        </div>
                    </article>
                <% } %>

            </div>

        </section>
    </main>
    <%- include('../partials/footer') %>
</body>
</html>