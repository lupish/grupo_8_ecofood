<div id="opaco-menu-hamburguesa">

</div>
<div id="menu-hamburguesa">
    <div class= "menu-hamburguesa-header">
        <img class="menu-hamburguesa-logo" src="/img/EcoFood Logo Curvas web.jpg" alt="">

        <a href="/">
            <i class="fa-solid fa-circle-xmark"></i>
        </a>
    </div>

    <% if (locals.usuarioLogueado) { %>
        <h2>¡Bienvenido <%= locals.usuarioLogueado.nombre%>!</h2>
    <%} else {%>
        <h2>¡Bienvenido!</h2>
    <%}%>

    <div class="menu-hamburguesa-iconos">
        <% if (!locals.usuarioLogueado) { %>
            <div>
                <a href="/users/login">
                    <i class="fa-solid fa-user"></i>
                </a>
                <p>Iniciá sesión o registrate</p>
            </div>
        <%} else {%>
            <div>
                <a href="/users/edit/<%= usuarioLogueado.id %>">
                    <i class="fa-solid fa-user-pen"></i>
                </a>
                <p>Editá tu perfil</p>
            </div>

            <% if (locals.usuarioLogueado.rol.nombre == "Administrador") { %>
                <div>
                    <a href="panels/manageEcoFood">
                        <i class="fa-solid fa-screwdriver-wrench"></i>
                    </a>
                    <p>Gestioná el sitio</p>
                </div>
            <%}%>

            <div>
                <a href="/users/logout/<%= usuarioLogueado.id %>">
                    <i class="fa-solid fa-right-from-bracket"></i>
                </a>
                <p>Cerrá sesión</p>
            </div>
        <%}%>

        <div>
            <a href="/products/productCart">
                <i class="fa-solid fa-solid fa-cart-shopping"></i>
            </a>
            <p>Finalizá tu compra</p>
        </div>

        <div>
            <a id="mirar-favoritos" href="">
                <i class="fa-solid fa-star"></i>
            </a>
            <p>Mirá tus favoritos</p>
        </div>
    </div>

    <div id="menu-hamburguesa-estilosVida" class="menu-hamburguesa-estilosVida">
        
    </div>
    
</div>